{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "dom.iterable"],
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2019",
    "outDir": "lib",
    "jsx": "react",
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
